// opara instalar o prisma //"npx prisma init --datasource-provider sqlite"
// apos criar o model // tem que rodar o migration para criar/atualizar a tabela "npx prisma migrate dev"

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Article {
  id            Int @id @default(autoincrement())
  slug          String @unique @default(uuid())
  title         String
  excerpt       String
  content       String
  image         String
  publishedAt   DateTime
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())
}
